
<show>
  <div id="info" class="user_info">

    <user_images>
      <rating_scores>
        <%= link to: "#ratings" do %>
          <%= render StoreHallWeb.RatingView, "_rating_block.html", rating: @user.details["rating"], for_id: @user.id %>
        <% end %>
      </rating_scores>

      <div class="fotorama"
          data-allowfullscreen="native"
          data-arrows="always"
          data-nav="thumbs"
          data-loop="true"
          data-width="100%"
          data-maxheight="40%">

        <img src="<%= @user.image %>" alt="<%= @user.name %>">

        <%= for image <- @user.details["images"] || [] do %>
          <a href="<%= image %>"></a>
        <% end %>

        <%= for video <- @user.details["videos"] || [] do %>
          <a href="<%= video %>"></a>
        <% end %>
      </div>

    </user_images>

    <user_info>
      <%= render StoreHallWeb.UserView, "_show_info_data.html", user: @user %>
    </user_info>

    <user_details>
      <span>
        <span class="info_content"><%= sanitize to_string(@user.details["description"]) %></span>
      </span>
    </user_details>

    <actions>
      <%= render StoreHallWeb.RatingView, "form.html", conn: @conn, ratings: @user.ratings, rating: %{
        id: nil,
        user_id: @user.id,
        details: %{}
      } %>
    </actions>

  </div>

  <div id="contacts">
    <%= render "contacts.html", conn: @conn, user: @user %>
  </div>

  <div id="comments">
    <%= render StoreHallWeb.CommentView, "index.html", conn: @conn, comments: @user.comments, comment_template: %{
      id: nil,
      user_id: @user.id
    } %>
  </div>

  <div id="ratings">
    <%= render StoreHallWeb.RatingView, "index.html", conn: @conn, ratings: @user.ratings, rating_template: %{
      id: nil,
      user_id: @user.id,
      details: %{}
    } %>
  </div>

</show>
