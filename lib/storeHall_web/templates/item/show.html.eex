
<show>
  <div id="info" class="item_info">

    <item_user_info>
      <avatar>
        <%= link to: Routes.user_path(@conn, :show, @item.user_id || "") do %>
          <img class="lazy" data-src="<%= @item.user.image %>" />
          <name><%= @item.user.first_name <> " " <> @item.user.last_name %></name>
        <% end %>
      </avatar>

      <%= render StoreHallWeb.UserView, "_show_info_data.html", user: @item.user %>

    </item_user_info>

    <item_details>

        <span>
          <span class="info_title"><%= Gettext.gettext("Price") %></span>
          <span class="info_content"><%= @item.details["price"] %></span>
        </span>

        <span>
          <span class="info_title"><%= Gettext.gettext("Description") %> </span>
          <span class="info_content"><%= sanitize @item.details["description"] %></span>
        </span>

        <span>
          <span class="info_title"><%= Gettext.gettext("Expiration") %> </span>
          <span class="info_content"><%= sanitize @item.details["expiration"] %></span>
        </span>

        <span>
          <span class="info_title"><%= Gettext.gettext("Tags") %> </span>
          <span class="info_content"><%= @item.details["tags"] %></span>
        </span>

        <span>
          <span class="info_title"><%= Gettext.gettext("Features") %> </span>
          <span class="info_content"><%= @item.details["features"] %></span>
        </span>

        <span>
          <span class="info_title"><%= Gettext.gettext("Conditions") %> </span>
          <span class="info_content"><%= sanitize @item.details["conditions"] %></span>
        </span>

    </item_details>


    <!-- links to mark image as inappropriate -->
    <!-- https://help.twitter.com/en/rules-and-policies/media-policy -->
    <item_images>
      <rating_scores>
        <%= link to: "#ratings" do %>
          <%= render StoreHallWeb.RatingView, "_rating_block.html", rating: @item.details["rating"], for_id: @item.id %>
        <% end %>
      </rating_scores>

      <div class="fotorama"
          data-autoplay="true"
          data-allowfullscreen="native"
          data-arrows="always"
          data-nav="thumbs"
          data-loop="true"
          data-width="100%"
          data-maxheight="80%">
        <%= for image <- @item.details["images"] || [] do %>
          <a href="<%= image %>"></a>
        <% end %>

        <%= for video <- @item.details["videos"] || [] do %>
          <a href="<%= video %>"></a>
        <% end %>
      </div>

    </item_images>

    <actions>
      <% current_user_id = if @conn.assigns[:logged_user] != nil do @conn.assigns[:logged_user].id end
        am_author = Map.has_key?(@item, :user_id) and @item.user_id == current_user_id %>
      <%= unless am_author do %>
        <%= render_shared "reactions.html",
          model: @item,
          reaction: @item.reaction,
          react_to: %{type: "item", id: @item.id, author_id: @item.id, user_id: @item.user_id} %>

        <%= render StoreHallWeb.RatingView, "form.html", conn: @conn, ratings: @item.ratings, rating: %{
          id: nil,
          item_id: @item.id,
          user_id: @item.user_id,
          details: %{}
        } %>
      <% end %>
    </actions>
  </div>

  <div id="comments">

    <%= render StoreHallWeb.CommentView, "index.html", conn: @conn, comments: @item.comments, comment_template: %{
      id: nil,
      item_id: @item.id,
      user_id: @item.user_id
    } %>
  </div>

  <div id="ratings">

    <%= render StoreHallWeb.RatingView, "index.html", conn: @conn, ratings: @item.ratings %>

  </div>

</show>
