<rating-form id="rating">
  Body:
  <input class="body" type="text" name="body", value="">
  Scores:
  <input class="scores" type="text" name="scores", value="<%= Jason.encode! @rating.scores %>">
  <input class="rating" type="hidden" name="rating", value="<%= Jason.encode! @rating %>">
  <button rating-topic="rating:add" type="button">Send</button>
</rating-form>
