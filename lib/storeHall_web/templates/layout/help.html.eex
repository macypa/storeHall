<help>
  <svg class="svg_icon menu_svg_icon">
    <use xlink:href="/images/sprite.svg#si-awesome-question-circle"></use>
  </svg>
  <div class="dropdown">
    <ul>
      <%= link to: Routes.about_path(@conn, :index) do %>
        <li>
          <span class="text"><%= Gettext.gettext("About Us") %></span>
        </li>
      <% end %>

      <%= link to: Routes.about_path(@conn, :terms) do %>
        <li>
          <span class="text"><%= Gettext.gettext("Terms") %></span>
        </li>
      <% end %>

      <%= link to: Routes.about_path(@conn, :privacy) do %>
        <li>
          <span class="text"><%= Gettext.gettext("Privacy") %></span>
        </li>
      <% end %>

      <%= link to: Routes.about_path(@conn, :index) <> "#sponsor" do %>
        <li>
          <span class="text"><%= Gettext.gettext("Sponsor") %></span>
        </li>
      <% end %>

      <%= link to: Routes.about_path(@conn, :howto) <> "#post" do %>
        <li>
          <span class="text"><%= Gettext.gettext("How to") %></span>
        </li>
      <% end %>

    </ul>
  </div>
</help>
